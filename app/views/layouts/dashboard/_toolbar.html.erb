<div class="btn-toolbar" role="toolbar">
  <div class="btn-group">
    <button class="btn btn-default" data-toggle="modal" data-target="#addPostModal">
      <span class="glyphicon glyphicon-plus"></span> Add post
    </button>
    <a href="//<%= @current_blog.fqdn.blank? ? "#{@current_blog.subdomain}.#{Rails.application.secrets.domain_name}" : @current_blog.fqdn %>" class="btn btn-default" target="_blank">
      <span class="glyphicon glyphicon-cog"></span> Visit blog
    </a>
    <a href="<%= edit_blog_path(@current_blog) %>" class="btn btn-default">
      <span class="glyphicon glyphicon-cog"></span> Edit blog
    </a>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addPostModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= simple_form_for @post, :url => blog_posts_path(@current_blog) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New post</h4>
      </div>
      <div class="modal-body">
        <%= f.input :title %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('#addPostModal').on('shown.bs.modal', function () {
    $('#post_title').focus();
  })
</script>
