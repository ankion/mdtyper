<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Mdwriter" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Mdwriter" %>">
    <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'dashboard', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/messages' %>
<!-- Navigation -->
    <%= render 'layouts/dashboard/navigation' %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <%= yield %>

        </div>
        <!-- /.row -->

        <!-- Footer -->
        <%= render 'layouts/dashboard/footer' %>

    </div>
    <!-- /.container -->
  </body>
</html>
