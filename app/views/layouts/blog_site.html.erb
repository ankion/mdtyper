<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Mdwriter" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Mdwriter" %>">
    <%= stylesheet_link_tag 'blog_home', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <h1 class="page-header">
        <%= link_to @current_blog.title, site_posts_path %>
        <small><%= @current_blog.subtitle %></small>
      </h1>
    </header>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <%= yield %>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <%= render 'layouts/blog/search' %>

                <!-- Blog Categories Well -->
                <%= render 'layouts/blog/categories' %>

            </div>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <%= render 'layouts/blog/footer' %>

    </div>
    <!-- /.container -->
    <%= javascript_include_tag 'blog_site', 'data-turbolinks-track' => true %>
  </body>
</html>
